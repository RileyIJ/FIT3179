{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "data/meat_production.csv"},
  "transform": [{"filter": "datum.Year==selecta"}],
  "params": [
    {
      "name": "selecta",
      "value": [2021],
      "bind": {
        "input": "range",
        "min": 1979,
        "max": 2021,
        "step": 1,
        "name": "Select year:"
      }
    }
  ],
  "height": 300,
  "width": 250,
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Animal",
      "type": "nominal",
      "title": "Meat"
    },
    "y": {
      "field": "Quantity(kt)", 
      "type": "quantitative",
      "title": "Quantity Produced (kt)",
      "scale": {"domain": [0, 2700]}
    },
    "tooltip": {
      "field": "Quantity(kt)", 
      "type": "quantitative"
    }
  }
}